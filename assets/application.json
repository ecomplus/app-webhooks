            }
          }
        }
      },
      "hide": true
    },
    "manual_queue": {
      "schema": {
        "title": "Fila manual de disparos",
        "type": "array",
        "maxItems": 3000,
        "items": {
          "title": "ID do pedido",
          "type": "string",
          "minLength": 24,
          "maxLength": 24
